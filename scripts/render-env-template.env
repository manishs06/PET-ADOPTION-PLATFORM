# Render Environment Variables Template
# Copy this file to .env and fill in your values
# Then run: node scripts/setup-render-env.js

# Render API Configuration
RENDER_API_KEY=your_render_api_key_here
RENDER_SERVICE_ID=your_service_id_here

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pet-adoption-platform

# JWT Configuration
JWT_SECRET=generate_a_strong_random_secret_here
JWT_EXPIRE=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ImgBB Configuration
IMGBB_API_KEY=your_imgbb_api_key

# Frontend URL (update after deploying frontend)
FRONTEND_URL=https://your-frontend.onrender.com
CORS_ORIGIN=https://your-frontend.onrender.com

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=FourPaws <your_email@gmail.com>

# Admin Secret
FIRST_ADMIN_SECRET=your_admin_secret_here

